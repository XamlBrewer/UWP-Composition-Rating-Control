<Application x:Class="XamlBrewer.Uwp.Composition.Rating.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="using:XamlBrewer.Uwp.Composition.Rating"
             RequestedTheme="Light">

    <Application.Resources>
        <!-- Theme Resources -->

        <!-- Header -->
        <SolidColorBrush x:Key="TitlebarBackgroundBrush"
                         Color="#10621E" />
        <SolidColorBrush x:Key="StatusbarBackgroundBrush"
                         Color="#10621E" />
        <!-- Splitview Pane -->
        <SolidColorBrush x:Key="SplitViewBackgroundBrush"
                         Color="#AA4139" />
        <SolidColorBrush x:Key="SplitViewForegroundBrush"
                         Color="White" />
        <SolidColorBrush x:Key="SplitViewHighlightBrush"
                         Color="Gold" />

        <!-- Splitview Content -->
        <SolidColorBrush x:Key="PageBackgroundBrush"
                         Color="#0E464E" />
        <SolidColorBrush x:Key="PageForegroundBrush"
                         Color="#69969C" />
        
    </Application.Resources>
</Application>
